{
  "name": "rise-low-code-builder",
  "version": "0.1.0",
  "description": "AI-powered visual low-code builder for React applications",
  "main": "dist/main/index.js",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:security": "vitest run tests/unit/security",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix"
  },
  "keywords": [
    "low-code",
    "react",
    "visual-builder",
    "electron"
  ],
  "author": "Rise Team",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/chokidar": "^2.1.7",
    "@types/jest": "^29.5.11",
    "@types/keytar": "^4.4.2",
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitest/coverage-v8": "^4.0.10",
    "@vitest/ui": "^4.0.10",
    "chokidar": "^3.6.0",
    "eslint": "^8.56.0",
    "happy-dom": "^20.0.10",
    "jest": "^29.7.0",
    "jsdom": "^27.0.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3",
    "vitest": "^4.0.10"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/*.test.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  },
  "dependencies": {
    "keytar": "^7.9.0"
  }
}
