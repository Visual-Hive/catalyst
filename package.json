{
  "name": "catalyst",
  "version": "0.1.0",
  "description": "AI-powered visual workflow builder that generates production Python code",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc --project tsconfig.renderer.json && vite build",
    "build:electron": "tsc --project tsconfig.electron.json",
    "preview": "vite preview",
    "electron:dev": "vite",
    "electron:build": "npm run build && electron-builder",
    "electron:build:mac": "npm run build && electron-builder --mac",
    "electron:build:win": "npm run build && electron-builder --win",
    "electron:build:linux": "npm run build && electron-builder --linux",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:security": "vitest run tests/unit/security",
    "lint": "eslint src electron --ext .ts,.tsx",
    "lint:fix": "eslint src electron --ext .ts,.tsx --fix"
  },
  "keywords": [
    "workflow",
    "python",
    "visual-builder",
    "electron",
    "automation",
    "fastapi"
  ],
  "author": "Catalyst Team",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/chokidar": "^2.1.7",
    "@types/electron": "^1.4.38",
    "@types/jest": "^29.5.11",
    "@types/keytar": "^4.4.2",
    "@types/node": "^20.11.5",
    "@types/prismjs": "^1.26.5",
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.7",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-v8": "^4.0.10",
    "@vitest/ui": "^4.0.10",
    "autoprefixer": "^10.4.22",
    "chokidar": "^3.6.0",
    "concurrently": "^8.2.2",
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "electron-store": "^8.2.0",
    "eslint": "^8.56.0",
    "happy-dom": "^20.0.10",
    "jest": "^29.7.0",
    "jsdom": "^27.0.1",
    "postcss": "^8.5.6",
    "prettier": "^3.7.1",
    "tailwindcss": "^3.4.18",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3",
    "vite": "^5.4.21",
    "vite-plugin-electron": "^0.28.8",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vitest": "^4.0.10",
    "wait-on": "^7.2.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/*.test.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@headlessui/react": "^2.2.9",
    "@heroicons/react": "^2.2.0",
    "@types/react-window": "^1.8.8",
    "immer": "^11.0.0",
    "keytar": "^7.9.0",
    "prismjs": "^1.30.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hotkeys-hook": "^5.2.1",
    "react-resizable-panels": "^3.0.6",
    "react-window": "^2.2.3",
    "reactflow": "^11.11.4",
    "uuid": "^9.0.1",
    "zod": "^4.2.1",
    "zustand": "^4.5.2"
  },
  "build": {
    "appId": "com.catalyst.workflow",
    "productName": "Catalyst",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "public/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "public/icons/icon.svg",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "public/icons/icon.svg",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "icon": "public/icons/icon.svg",
      "category": "Development",
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}
